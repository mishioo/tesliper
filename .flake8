[flake8]
max-line-length = 88
max-complexity = 18
select = B,C,E,F,W,T4,B9
ignore = W503,
         F403,
         F401,
         E203 # See https://github.com/PyCQA/pycodestyle/issues/373
per-file-ignores =
    # line too long and trailing space in in-file examples of output .txt files
    test/integration/writing/test_txt_writer.py: E501, W291